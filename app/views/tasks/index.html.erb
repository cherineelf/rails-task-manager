<h1>My tasks</h1>
<!--Afficher toutes les tÃ¢ches -->
<% @tasks.each do |task| %>
  <h2> <%= task.name %> </h2>
  <p> <%= task.content %> </p>
  <p> <%= task.date %> </p>
<!--Link to its show view -->
<%= link_to "Show", task_path(task) %>
<!--Link to its edit view -->
<%= link_to "Edit", edit_task_path(task) %>
<!--Link to its delete action -->
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

